.component-list
  font-family sans-serif
  
  .header
    position fixed
    width 100%
    height 60px
    padding 21px 25px
    box-sizing border-box
    background #000
    
    input 
      width 100%
      font-size 16px
      color white
  
  ul 
    padding-top 60px
    
    li
      display block
      padding 25px  
      border-bottom 1px solid #f0f0f0
      cursor pointer
      
      &:hover
        background #fafafa
        
        .tags span
          background #e9e9e9
      
      .tags
        display inline-block
        padding-left 10px
        
        span 
          background #f0f0f0
          padding 4px
          border-radius 3px
          margin-right 7px
      